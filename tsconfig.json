{
	"compilerOptions": {
		"module": "ES6",
		"target": "ES2015",
		"sourceMap": true,
		"allowJs": false,
		"rootDirs": [
			"./src/app/backend/src",
			"./src/app/frontend/src/ts"
		],
		"outDir": "./dist",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"strict": true,
		"strictPropertyInitialization": false, //https://www.typescriptlang.org/docs/handbook/release-notes/typescript-2-7.html#strict-class-initialization

	},
	"exclude": [
		"node_modules",
		"directory",
		"dist"
	],

	"files": [
		"./src/index.js",
		"./dist/frontend.js"
	]
}
